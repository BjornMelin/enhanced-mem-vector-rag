# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
COHERE_API_KEY=...

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic, cohere
DEFAULT_LLM_MODEL=gpt-4o  # OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo / Anthropic: claude-3-opus, claude-3-sonnet / Cohere: command-r, command-r-plus
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Embedding Configuration
EMBEDDING_PROVIDER=openai  # Options: openai, cohere, local
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI: text-embedding-3-small, text-embedding-3-large / Cohere: embed-english-v3.0 / Local: BAAI/bge-small-en-v1.5
FASTEMBED_MODEL=BAAI/bge-small-en-v1.5
FASTEMBED_DEVICE=cpu  # Options: cpu, cuda

# Vector Store (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=emvr_vectors
QDRANT_LOCATION=local  # Options: local, http (for deployment)
VECTOR_DIMENSION=384  # Depends on model: OpenAI=1536, Cohere=1024, BAAI/bge-small-en-v1.5=384 

# Memory Interface (mem0)
MEM0_URL=http://localhost:7891
MEM0_API_KEY=
MEM0_MEMORY_ID=emvr_memory

# Graph Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=emvr

# Graphiti
GRAPHITI_URI=http://localhost:2342
GRAPHITI_API_KEY=

# Structured Data (Supabase)
SUPABASE_URL=http://localhost:8000
SUPABASE_KEY=
SUPABASE_PROJECT=emvr

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
S3_BUCKET_NAME=emvr-documents

# MCP Server Configuration
MCP_PORT=8080
MCP_HOST=0.0.0.0
MCP_API_KEY=  # Required for security in production
MCP_TIMEOUT=30  # Seconds

# Application Settings
APP_ENV=development  # Options: development, production
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_TRACING=false
MAX_CONCURRENT_REQUESTS=5
DEFAULT_CHUNK_SIZE=512
DEFAULT_CHUNK_OVERLAP=50

# UI Settings (Chainlit)
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8501
CHAINLIT_AUTH_ENABLED=false

# Docker Settings
DOCKER_NETWORK_NAME=emvr-network